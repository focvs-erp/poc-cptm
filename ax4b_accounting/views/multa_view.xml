<odoo>
     <record id="view_codigo_multa_form" model="ir.ui.view">
      <field name="name">Código de Multa</field>
      <field name="model">account.multa</field>
      <field name="arch" type="xml">
        <form string="Codigo_multa">
          <sheet>
            <div class="codigo_multa_title">
              <span class="o_form_label">Código de Multa</span>
              <h1>
                <field name="name" placeholder="Código..."/> 
              </h1>
            </div>
            <group>
              <group name="right_main_group">
                <field name="descricao"/>
                <field name="dias"/>
                <field name="percentual"/>
            </group>
         </group>
       </sheet>
     </form>
  </field>
</record> 
        
   <record id="view_codigo_multa_tree" model="ir.ui.view">
      <field name="model">account.multa</field>
      <field name="arch" type="xml">
        <tree string="Código de Multa">
          <field name="name"/>
          <field name="descricao"/>
          <field name="dias"/>
          <field name="percentual"/>
        </tree>
      </field>
    </record>
       
     <record id="account_codigo_multa_window" model="ir.actions.act_window">
      <field name="name">Código de Multa</field>
      <field name="res_model">account.multa</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" ref="view_codigo_multa_tree"/>
    </record>
       
        <menuitem id="account_codigo_multa_menu" name="Código de Multa"                                        parent="account.account_account_menu" action="account_codigo_multa_window"/>

        
</odoo>        
        