<odoo>
    <record id="patrimonio_expense_form" model="ir.ui.view">
        <field name="name">Patrimonio</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/header/field[@name='state']" position="after">
		        <button name="btn_mudar_status_para_draft" string="Transferir" class='oe_inline oe_edit_only' type="object" attrs="{'invisible': [('state', '=', 'draft')]}"/>
	        </xpath>
            <xpath expr="/form/sheet/div[3]/h1/field[@name='name']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="/form/sheet/group[1]/group[1]" position="attributes">
                <attribute name="string">Valores de Ativos Fixos</attribute>
            </xpath>
            <xpath expr="/form/sheet/group[1]/group[2]" position="attributes">
                <attribute name="string">Valores Atuais</attribute>
            </xpath>
            <xpath expr="/form/sheet/group[1]/group[3]/field[3]" position="attributes">
                <attribute name="string">Início da Depreciação</attribute>
            </xpath>
            <xpath expr="/form/sheet/group[1]/group[1]" position="before">
                <group string="Identificação">
                    <field name="name" readonly="1"/>
                    <field name="data_cri" readonly="1"/>
                    <field name="num_fis"/>                        
                </group>
                <group name='contrato' string='Contrato'>
                    <field name="num_cont"/>
                </group>
            </xpath>
            <field name="journal_id" position="after">
                <field name="centro_custo_related"/>
                <field name="desc_centro_custo_related"/>
            </field>
            <xpath expr="/form/sheet/group[1]/group[5]" position="after">
                <group name='informacoes_adicionais' string='Método de Depreciação Societária'>
                    <field name="metodo_info_add" widget="radio" options="{'horizontal': true}"/>
                    <field name="metodo_depreciado_info_add" attrs="{'invisible':[('metodo_info_add','=','1')], 'required':[('metodo_info_add','in',('2', '3'))]}"/>
                    <label for="method_number_info_add" string="Duração"/>
                    <div class="o_row">
                        <field name="method_number_info_add"/>
                        <field name="method_period_info_add" nolabel="1"/>
                    </div>
                    <label for="prorata" attrs="{'invisible': [('state', 'not in', ('draft', 'model')), ('prorata', '=', False)]}"/>
                    <div class="o_row" attrs="{'invisible': [('state', 'not in', ('draft', 'model')), ('prorata', '=', False)]}">
                        <field name="cod_forn_info_add"/>
                        <label for="cod_forn_date_info_add" attrs="{'invisible': ['|', ('cod_forn_info_add', '=', False), ('state', '=', 'model')]}"/>
                        <field name="cod_forn_date_info_add" attrs="{'invisible': ['|', ('cod_forn_info_add', '=', False), ('state', '=', 'model')], 'required': [('cod_forn_info_add', '=', True), ('state', '!=', 'model')]}"/>
                    </div>
                    <field name="cod_ccus_info_add"/>
                </group>
                <group string="Dados Fiscais">
                    <field name="num_nf"/>
                    <field name="data_docto"/>
                    <field name="cod_forn"/>                        
                </group>
            </xpath>
            <xpath expr="/form/sheet/notebook[1]/page[1]" position="after">
                <page string="Depreciação Societária" name="depreciacao_societaria">
                    <field name="depreciation_move_ids_societaria" colspan="4" nolabel="1">
                        <tree>
                            <field name="asset_id_societaria"/>
                            <field name="asset_value_change_societaria"/>
                            <field name="asset_asset_type_societaria"/>
                            <field name="asset_remaining_value_societaria"/>
                            <field name="asset_depreciated_value_societaria"/>
                            <field name="amount_total"/>
                        </tree>
                    </field>
                    <!-- <field name="depreciation_move_ids_societaria" mode="tree" options="{'reload_whole_on_button': true}">
                        <tree string="Depreciation Lines">
                            <field name="asset_asset_type_societaria" />
                            <field name="currency_id_societaria" invisible="1"/>
                            <field name="ref" invisible=""/> 
                            <field name="reversal_move_id" widget="deprec_lines_reversed"/> 
                            <field name="date" string="Depreciation Date"/> 
                            <field name="amount_total" widget="monetary" string="Depreciation" options="{'currency_field': 'currency_id'}" attrs="{'readonly': [('state', '=', 'posted')]}"/> 
                            <field name="asset_depreciated_value_societaria" readonly="1" force_save="1" options="{'currency_field': 'currency_id'}"/> 
                            <field name="asset_remaining_value_societaria" readonly="1" widget="monetary" force_save="1" options="{'currency_field': 'currency_id'}"/> 
                            <field name="name" readonly="1" string="Journal Entry"/> 
                            <field name="state" invisible="1"/> 
                            <field name="asset_manually_modified" invisible="1"/>  
                        </tree>
                    </field> -->
                </page>
                <page string="Informações Adicionais" name="informacoes_adicionais">
                    <group> 
                        <group name='informacoes_adicionais'>
                            <field name="qtd_info_add" />
                            <field name="vlr_unit_info_add"/>
                        </group>
                        <group name='informacoes_adicionais'>
                            <field name="vlr_tot_info_add"/>
                            <field name="num_atpai_info_add"/>
                        </group>
                    </group>
                </page>
                <page string="Localização" name="localizacao">
                    <group>
                        <group name='localizacao'>
                            <field name="desc_loc_localizacao" /> 
                            <field name="nome_resp_localizacao"/>
                            <field name="desc_dep_localizacao"/>
                        </group>
                        <group name='localizacao'>
                            <field name="num_gis_localizacao"/>
                            <field name="contato_localizacao"/>
                            <field name="desc_obs_localizacao"/>
                        </group>
                    </group>
                </page>
                <page string="Seguro" name="dados_seguro">
                    <field name="table_dados_seguro"/>
                </page>
                <page string="Dados de Garantia" name="dados_garantia">
                     <group>
                        <group name='dados_garantia'>
                            <field name="nome_marca_dados_garantia"/>
                            <field name="desc_mod_dados_garantia"/>
                            <field name="num_serie_dados_garantia"/>
                        </group>
                        <group name='dados_garantia'>
                            <field name="data_vcto_dados_garantia"/>
                            <field name="desc_obs_dados_garantia"/>
                        </group>
                    </group>     
                </page>
                <page string="Orçamento" name="orcamento">
                    <div class="oe_title">
                        <group>
                            <field name="tabela_dotacao_orcamento"/>
                        </group>
                    </div>
                    <group string='Estrutura do Orçamento'>
                        <group name='estrutura_orcamento'>
                            <field name="nome_poder_orcamento"/>
                            <field name="nome_orgao_orcamento"/>
                            <field name="nome_unidade_orcamento"/>
                            <field name="grupo_unidade_orcamento"/>
                            <field name="funcao_unidade_orcamento"/>
                            <field name="programas_unidade_orcamento"/>
                            <field name="fonte_unidade_orcamento"/>
                            <field name="categoria_unidade_orcamento"/>
                            <field name="classe_unidade_orcamento"/>
                            <field name="modalidade_unidade_orcamento"/>
                            <field name="elemento_unidade_orcamento"/>
                            <field name="subfuncao_unidade_orcamento"/>
                            <field name="projeto_atividade_unidade_orcamento"/>
                        </group>
                        <group name='estrutura_orcamento_cod'>
                            <field name="cod_poder_orcamento"/>
                            <field name="cod_orgao_orcamento"/>
                            <field name="cod_unidade_orcamento"/>
                            <field name="cod_grupo_unidade_orcamento"/>
                            <field name="cod_funcao_unidade_orcamento"/>
                            <field name="cod_programas_unidade_orcamento"/>
                            <field name="cod_fonte_unidade_orcamento"/>
                            <field name="cod_categoria_unidade_orcamento"/>
                            <field name="cod_classe_unidade_orcamento"/>
                            <field name="cod_modalidade_unidade_orcamento"/>
                            <field name="cod_elemento_unidade_orcamento"/>
                            <field name="cod_subfuncao_unidade_orcamento"/>
                            <field name="cod_projeto_atividade_unidade_orcamento"/>
                        </group>
                    </group>     
                </page>
            </xpath>
      </field>
    </record>
    <record id="sequence_id" model="ir.sequence">
        <field name="name">Patrimonio</field>
        <field name="code">x_patimonio</field>
        <field name="padding">9</field>
        <field name="prefix">PAT_</field>
        <field name="suffix"></field>
    </record>
</odoo>