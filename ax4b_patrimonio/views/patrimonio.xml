<odoo>
    <record id="patrimonio_expense_form" model="ir.ui.view">
        <field name="name">Patrimonio</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset.view_account_asset_form" />
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/group[1]/group[1]" position="before">
                <group string="Identificação">
                    <field name="name"/>
                    <field name="data_cri"/>
                    <field name="num_fis"/>                        
                </group>
                <group name='contrato' string='Contrato'>
                    <field name="num_cont"/>
                </group>
            </xpath>
            <field name="journal_id" position="after">
<!--                 <field name="centro_custo_related"/> -->
<!--                 <field name="desc_centro_custo_related"/> -->
            </field>
            <xpath expr="/form/sheet/group[1]/group[5]" position="after">
                <group name='informacoes_adicionais' string='Método de Depreciação Societária'>
                    <field name="metodo_info_add" widget="radio" options="{'horizontal': true}"/>
                    <field name="metodo_depreciado_info_add" attrs="{'invisible':[('metodo_info_add','=','1')], 'required':[('metodo_info_add','in',('2', '3'))]}"/>
                    <label for="method_number_info_add" string="Duração"/>
                    <div class="o_row">
                        <field name="method_number_info_add"/>
                        <field name="method_period_info_add" nolabel="1"/>
                    </div>
                    <label for="prorata" attrs="{'invisible': [('state', 'not in', ('draft', 'model')), ('prorata', '=', False)]}"/>
                    <div class="o_row" attrs="{'invisible': [('state', 'not in', ('draft', 'model')), ('prorata', '=', False)]}">
                        <field name="cod_forn_info_add"/>
                        <label for="cod_forn_date_info_add" attrs="{'invisible': ['|', ('cod_forn_info_add', '=', False), ('state', '=', 'model')]}"/>
                        <field name="cod_forn_date_info_add" attrs="{'invisible': ['|', ('cod_forn_info_add', '=', False), ('state', '=', 'model')], 'required': [('cod_forn_info_add', '=', True), ('state', '!=', 'model')]}"/>
                    </div>
                    <field name="cod_ccus_info_add"/>
                </group>
                <group string="Dados Fiscais">
                    <field name="num_nf"/>
                    <field name="data_docto"/>
                    <field name="cod_forn"/>                        
                </group>
            </xpath>
            <xpath expr="/form/sheet/notebook[1]/page[1]" position="after">
                <page string="Informações Adicionais" name="informacoes_adicionais">
                    <group>
                        <group name='informacoes_adicionais'>
                            <field name="qtd_info_add" />
                            <field name="vlr_unit_info_add"/>
                        </group>
                        <group name='informacoes_adicionais'>
                            <field name="vlr_tot_info_add"/>
                            <field name="num_atpai_info_add"/>
                        </group>
                    </group>
                </page>
                <page string="Localização" name="localizacao">
                    <group>
                        <group name='localizacao'>
                            <field name="desc_loc_localizacao" />
                            <field name="nome_resp_localizacao"/>
                            <field name="desc_dep_localizacao"/>
                        </group>
                        <group name='localizacao'>
                            <field name="num_gis_localizacao"/>
                            <field name="contato_localizacao"/>
                            <field name="desc_obs_localizacao"/>
                        </group>
                    </group>
                </page>
                <page string="Seguro" name="dados_seguro">
                    <field name="table_dados_seguro"/>
                </page>
                <page string="Dados de Garantia" name="dados_garantia">
                     <group>
                        <group name='dados_garantia'>
                            <field name="nome_marca_dados_garantia"/>
                            <field name="desc_mod_dados_garantia"/>
                            <field name="num_serie_dados_garantia"/>
                        </group>
                        <group name='dados_garantia'>
                            <field name="data_vcto_dados_garantia"/>
                            <field name="desc_obs_dados_garantia"/>
                        </group>
                    </group>     
                </page>
                <page string="Orçamento" name="orcamento">
                     <group>
                        <group name='orcamento'>
<!--                        Inserir campos aqui       -->
                        </group>
                        <group name='orcamento'>
<!--                        Inserir campos aqui       -->
                        </group>
                    </group>     
                </page>
            </xpath>
      </field>
    </record>
    <record id="sequence_id" model="ir.sequence">
        <field name="name">Patrimonio</field>
        <field name="code">x_patimonio</field>
        <field name="padding">9</field>
        <field name="prefix">PAT_</field>
        <field name="suffix"></field>
    </record>
</odoo>