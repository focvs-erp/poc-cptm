<odoo>
  <data>

    <record id="view_cotacao_compra_form" model="ir.ui.view">
      <field name="name">Cotação de Compras</field>
      <field name="model">purchase.cotacao_compra</field>
      <field name="arch" type="xml">
        <form string="Cotacao_Compra">
          <header>
            <button name="btn_enviar" string="ENVIAR POR E-MAIL" />
            <button name="btn_Confirmar" string="CONFIRMAR"/>
            <button name="btn_cancelar" string="CANCELAR"/>
            <field name="status" widget="statusbar" statusbar_visible="SDC,SDCENVIADA,PEDIDODECOMPRA"/>
          </header>
          <sheet>
            <div class="cotacao_title">
              <span class="o_form_label">Cotação de Compras</span>
              <h1>
                <field name="prioridade" widget="priority" class="mr-3"/>
<!--                 <field name="name"/> -->
                <field name="cd_solitacao_cotacao"/> 
              </h1>
            </div>
            <group>
              <group name="right_main_group">
                <field name="empresa" placeholder="Empresa"/>
                <field name="inconterm" placeholder="inconterm"/>
                <!--                 <field name="cd_inconterm" placeholder="inconterm"/>   -->
                <field name="situacao" placeholder="situacao"/>
                <field name="moeda"/>
              </group>
              <group name="left_main_group">
                <field name="data_esperada" placeholder="data esperada"/>
                <field name="data_emissao" placeholder="data de emissão"/>
                <field name="create_uid" string="Preparador"/>
                <!--                 <field name="solicitar_cofirmacao"/> -->
                <field name="modalidade_de_compra" placeholder="Modalidade de Compra"/> 
              </group>
            </group>
            <notebook attrs="{'invisible' : [('modalidade_de_compra', '=', 'Normal')]}" >
              <page string="Produto" name="produto">
              </page>
              <page string="Fornecedores" name="Fornecedores">
                <field name="fornecedores_da_cotacao"/>
              </page>
              <page string="Orçamento" name="Orçamento"  attrs="{'invisible' : [('modalidade_de_compra', '=', 'Normal')]}" >
                <group>
                  <group name="right" >
                    <field name="nota_de_reserva"/>
                    <field name="nome_do_orgao"/>
                    <field name="nome_do_poder"/>
                    <field name="nome_da_unidade_orcamentaria"/>
                    <field name="nome_da_fonte"/> 
                    <!-- <field name="valor_nota_de_reserva"/> -->
                  </group>
                  <group name="left">
                    <field name="ano"/>
                    <field name="orgao"/>
                    <field name="poder"/>
                    <field name="unidade_orcamentaria"/>
                    <field name="fonte"/>
                  </group>
                </group> 
              </page>
              <page string="Cronograma" name="Cronograma">
               <field name="cronograma"/>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>


    <record id="view_cotacao_compra_tree" model="ir.ui.view">
      <field name="model">purchase.cotacao_compra</field>
      <field name="arch" type="xml">
        <tree string="Cotação de Compra" class="o_purchase_order">
          <field name="cd_solitacao_cotacao"/>
          <!-- <field name="cd_solitacao_cotacao"/> -->
          <field name="cd_empresa"/>
          <field name="create_uid"/> 
          <field name="modalidade_de_compra"/>
          <field name="situacao"/>
        </tree>
      </field>
    </record>

    <record  id="purchase_contacao_compra_window" model="ir.actions.act_window">
      <field name="name">Cotação de Compras</field>
      <field name="res_model">purchase.cotacao_compra</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" ref="view_cotacao_compra_tree"/>
    </record>

    <record id="sequence_id" model="ir.sequence">
            <field name="name">Cotação de Compras </field>
            <field name="code">x_cotacao_compras</field>
            <field name="padding">10</field>
            <field name="prefix">COT_</field>
            <field name="suffix"></field>
        </record>
    <menuitem id="purchase_cotacao_compra_menu" name="Cotação de Compra" parent="purchase.menu_procurement_management" action="purchase_contacao_compra_window"/>

  </data>
</odoo>