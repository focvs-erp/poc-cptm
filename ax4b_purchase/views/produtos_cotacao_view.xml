<odoo>
   <data>
    <record id="view_fornecedores_cotacao_form" model="ir.ui.view">
      <field name="name">Proutos da cotação</field>
      <field name="model">purchase.produtos_cotacao</field>
      <field name="arch" type="xml">
      <form string="Proutos da cotação">
          <sheet>
              <div class= "name" >
                   <span class="_form_label">Produtos da Cotação</span>
              <h1>
                <!-- <field name="prioridade" widget="priority" class="mr-3"/> -->
              </h1>
               </div>
              <group name="right_main_group">
               <group>
                  <field name="cotacao_de_compra" />
                  <!-- <field name="requisicao" placeholder="Fornecedores"/> -->
                  <field name="produtos_requisicao"/>
                  <field name="quantidade" />
                  <!-- <field name="unidademedida" /> -->
                  <field name="situacao" />
               </group>
              </group>
         </sheet>
        </form>
       </field>
      </record>
       
        <record id="view_produtos_cotacao_tree" model="ir.ui.view">
      <field name="model">purchase.produtos_cotacao</field>
      <field name="arch" type="xml">
        <tree string="Fornecedores da cotação"  class="o_purchase_order" editable="top" create="1" delete="1" multi_edit="1">
            <!-- <field name="requisicao" placeholder="Requisição"/> -->
            <field name="produtos_requisicao" />
            <field name="quantidade" />
            <!-- <field name="unidademedida" /> -->
            <field name="situacao" />
        </tree>
      </field>
    </record>
       
    <record  id="purchase_fornecedores_cotacao_window" model="ir.actions.act_window">
      <field name="name">Produtos da cotação</field>
      <field name="res_model">purchase.produtos_cotacao</field>
      <field name="type">ir.actions.act_window</field>
      <field name="view_id" ref="view_produtos_cotacao_tree"/>
    </record>

    <!-- <menuitem id="purchase_fornecedores_cotacao_menu" name="Fornecedores Da Cotação" parent="purchase.menu_procurement_management" action="purchase_fornecedores_cotacao_window"/> -->

  </data>
</odoo>