<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="cptm_custom.list">
      <field name="name">cptm_custom list</field>
      <field name="model">cptm_custom.cptm_custom</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="cptm_custom.action_window">
      <field name="name">cptm_custom window</field>
      <field name="res_model">cptm_custom.cptm_custom</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="cptm_custom.action_server">
      <field name="name">cptm_custom server</field>
      <field name="model_id" ref="model_cptm_custom_cptm_custom"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="cptm_custom" id="cptm_custom.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="cptm_custom.menu_1" parent="cptm_custom.menu_root"/>
    <menuitem name="Menu 2" id="cptm_custom.menu_2" parent="cptm_custom.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="cptm_custom.menu_1_list" parent="cptm_custom.menu_1"
              action="cptm_custom.action_window"/>
    <menuitem name="Server to list" id="cptm_custom" parent="cptm_custom.menu_2"
              action="cptm_custom.action_server"/>

  </data>
</odoo>